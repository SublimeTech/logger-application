@using System.Web.Optimization
@{
    ViewBag.Title = "Register";
}

<h2>@ViewBag.Title.</h2>

<form id="registerForm">
    <h4>Register a new application.</h4>
    <hr />
    <div class="form-group">
        @Html.Label("Display Name", new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBox("applicationName", string.Empty, new { @class = "form-control not-valid" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit"disabled="disabled" id="registerBtn" class="btn btn-default" value="Register" />
        </div>
    </div>
</form>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/register")
}
